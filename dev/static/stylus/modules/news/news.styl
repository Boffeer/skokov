//----low tablet landscape
@media (min-width: 481px) and (max-width: 767px)
	.news
		&__descr
			width 80%
		&-blocks
			flex-flow row wrap
			width 300px
			margin 0 auto
			background none
		&-left
		&-right
			width 100%
			justify-content flex-end
		&-text
			background-color rgba(colorD, 0.89)
			margin-bottom 25px

