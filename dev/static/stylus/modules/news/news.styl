// ipad land
@media (min-width: 768px) and (max-width: 1024px) and (orientation: landscape)
	.news
		&-blocks
			max-width 900px 
			flex-flow row wrap
		&-left
			width 100%
			
		&-right
			width 100%
			display flex
			flex-direction row

// ipad portrait
