.news
	padding 75px 0 80px
	&__title
		@extend .title
	&__descr
		@extend .descr
		margin-bottom 75px
	
	&-blocks
		display flex
		justify-content space-between
		background-color mainColor
	&-left
		width 75%
		&__top
			display flex
			background-size cover
			background url(../img/content/news/top.png) 0 0 no-repeat
			justify-content flex-end
		&__bottom
			background-size cover
			background url(../img/content/news/bot.png) 100% 0 no-repeat
			display flex
			
			
	&-right 
		width 25%
		background url(../img/content/news/right.png) 0 0 no-repeat
		display flex
		align-items flex-end 

		
	&-text
		padding 29px
		size(300px, 300px)
		background-color colorD 
		display flex
		flex-direction column
		align-items space-between
		&__title
			@extend .red-title
		&__descr
			color #fff
			font-size 12px
			margin-bottom 30px
		&__date
			color mainColor
			font-size 12px
			font-style italic
			align-self flex-end
