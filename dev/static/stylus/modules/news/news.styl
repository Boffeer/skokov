.news
	padding 75px 0 80px
	&__title
		@extend .title
	&__descr
		@extend .descr
		margin-bottom 75px
	
	&-blocks
		display flex
		justify-content space-between
	&-left
		width 75%
		&__top
		&__bottom
			display flex
		
	&-right 
		width 25%
		
	&-text
		padding 29px
		size(300px, 300px)
		background-color colorD 
		display flex
		flex-direction column
		align-items space-between
		&__title
			@extend .red-title
		&__descr
			color #fff
			font-size 12px
			margin-bottom 30px
		&__date
			color mainColor
			font-size 12px
			font-style italic
			align-self flex-end
