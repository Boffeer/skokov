// ipad portrait
@media (max-width 1024px)
	.nav
		justify-content space-between
		width 80%
		&-menu
			display none	
	.burger
		display flex
		justify-content space-around
		flex-flow column wrap
		size(40px, 40px)
		cursor pointer
		&__line
			transition all .5s
			display block
			position relative
			size(100%, 4px)
			background-color mainColor
			border-radius 4px
		&--active > *
			transition all .5s
			&:first-child
				transform rotate(45deg)
			&:last-child
				transform rotate(-45deg)
				margin-top -100%
			&:nth-child(even)
				display none