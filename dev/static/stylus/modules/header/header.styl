.header
	width 100%
	margin 0 auto
	height 60px
	position fixed
	z-index 10 
	overflow visible
	&--active
		background-color rgba(#000000, .8) 
	&-content
		max-width 1200px
		height 60px
		
.nav
	display flex
	justify-content space-between
	align-items center
	max-width 1200px
	height 60px
	margin 0 auto
	position relative
	&__logo
		diplay block
		font-size 32px 
		@extend .bold
		color mainColor
		text-transform uppercase 
	&-menu
		display flex
		justify-content space-between
		align-items center
		width 500px
		font-size 14px
	&__link
		display block
		color #ffffff
		text-transform uppercase
		&:hover
			transition all .1s
			border-bottom 3px solid mainColor
				
.burger
	display none
	
