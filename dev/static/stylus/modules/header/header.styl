.header
	width 100%
	height 40px
	position relative
	&-content
		width 1200px
		height 40px
	.nav
		padding-top 40px
		position fixed
		z-index 5
		display flex
		justify-content space-between
		align-items center
		width 1200px
		height 40px
		&__logo
			diplay block
			font-size 32px 
			@extend .bold
			color mainColor
		&-menu
			display flex
			justify-content space-between
			align-items center
			width 500px
			font-size 14px
		&__link
			color #ffffff
			text-transform uppercase
			line-height 32px 
			&:hover
				transition all .1s
				border-bottom 3px solid mainColor